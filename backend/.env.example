# PhishNet Environment Configuration

# Application Settings
APP_NAME=PhishNet
APP_VERSION=0.1.0
DEBUG=false
BASE_URL=http://localhost:8000

# Security Settings
SECRET_KEY=change-this-in-production-very-long-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ROTATE_REFRESH_TOKENS=true

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/phishnet_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration (for caching and Celery)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Gmail API Configuration
GMAIL_CLIENT_ID=your-gmail-client-id.googleusercontent.com
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REDIRECT_URI=http://localhost:8000/api/v1/auth/gmail/callback
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Content Security Settings
MAX_EMAIL_CONTENT_LENGTH=1000000
ENABLE_LINK_REWRITING=true

# Rate Limiting
RATE_LIMIT_LOGIN=5/minute
RATE_LIMIT_API=100/minute

# Email Processing
EMAIL_SCAN_INTERVAL=300
MAX_EMAILS_PER_SCAN=50
ENABLE_REAL_TIME_ALERTS=true

# Background Tasks (Celery)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# External APIs (Optional)
VIRUSTOTAL_API_KEY=your-virustotal-api-key
ABUSEIPDB_API_KEY=your-abuseipdb-api-key

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Settings (for frontend)
FRONTEND_URL=http://localhost:3000
