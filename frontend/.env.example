# Example environment variables for PhishNet Frontend

# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_BASE_URL=ws://localhost:8000

# Production URLs (replace with your actual Render.com URL)
# VITE_API_BASE_URL=https://phishnet-api.onrender.com
# VITE_WS_BASE_URL=wss://phishnet-api.onrender.com

# Application Configuration
VITE_APP_TITLE=PhishNet - Gmail Security Monitoring
VITE_APP_VERSION=1.0.0

# Google OAuth Configuration (Client-side)
# Note: Only use this for client-side validation, never store secrets here
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Feature Flags
VITE_ENABLE_DEBUG=false
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_ANALYTICS=true

# Rate Limiting Configuration
VITE_SCAN_RATE_LIMIT=2
VITE_SCAN_WINDOW_MS=300000

# Real-time Updates Configuration
VITE_SSE_RECONNECT_INTERVAL=5000
VITE_SSE_MAX_RECONNECT_ATTEMPTS=10
