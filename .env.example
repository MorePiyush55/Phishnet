# PhishNet Environment Configuration Template
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME=PhishNet
APP_VERSION=0.1.0
DEBUG=true
BASE_URL=http://localhost:8000

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-secret-key-minimum-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/phishnet
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Gmail API Configuration (Optional)
GMAIL_CLIENT_ID=your-gmail-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REDIRECT_URI=http://localhost:8000/api/v1/auth/gmail/callback
GOOGLE_CLOUD_PROJECT=your-google-cloud-project-id

# Content Security
MAX_EMAIL_CONTENT_LENGTH=1000000
ENABLE_LINK_REWRITING=true

# Rate Limiting
RATE_LIMIT_LOGIN=5/minute
RATE_LIMIT_API=100/minute

# Email Processing
EMAIL_SCAN_INTERVAL=300

# Analysis Service API Keys - ADD YOUR KEYS HERE
GOOGLE_GEMINI_API_KEY=your-gemini-api-key-here
VIRUSTOTAL_API_KEY=your-virustotal-api-key-here
ABUSEIPDB_API_KEY=your-abuseipdb-api-key-here

# Analysis Configuration
ENABLE_AI_ANALYSIS=true
ENABLE_LINK_ANALYSIS=true
ENABLE_THREAT_INTEL=true

# AWS Secrets Manager (Production)
AWS_REGION=us-west-2
AWS_SECRET_NAME=phishnet/production/secrets

# GCP Secret Manager (Production)
GCP_PROJECT_ID=your-gcp-project-id
GCP_SECRET_NAME=phishnet-secrets

# HashiCorp Vault (Production)
VAULT_URL=https://your-vault-instance.com
VAULT_TOKEN=your-vault-token

# Environment type for secret management
ENVIRONMENT=development  # development, staging, production
